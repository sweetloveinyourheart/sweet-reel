{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "analyzer": {
        "user_analyzer": {
          "type": "standard",
          "stopwords": "_english_"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "email": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "analyzer": "user_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "picture": {
        "type": "keyword"
      },
      "created_at": {
        "type": "date"
      },
      "updated_at": {
        "type": "date"
      }
    }
  }
}
